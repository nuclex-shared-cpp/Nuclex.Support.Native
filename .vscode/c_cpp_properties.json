{
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/Include/**",
                "${workspaceFolder}/../third-party/nuclex-googletest/build/googletest/include/**",
                "${workspaceFolder}/../third-party/nuclex-celero/build/include/**"
            ],
            "defines": [
                "NUCLEX_SUPPORT_EXECUTABLE",
                "NUCLEX_SUPPORT_SOURCE"
            ],
            "compilerPath": "/usr/bin/g++",
            "cStandard": "c11",
            "cppStandard": "c++17",
            "intelliSenseMode": "gcc-x64",
            "compilerArgs": [
                "-fvisibility=hidden",
                "-Wpedantic",
                "-Wall",
                "-Wextra",
                "-Wno-unknown-pragmas",
                "-fpic",
                "-funsafe-math-optimizations",
                "-std=c++17",
                "-fvisibility-inlines-hidden"
            ]
        }
    ],
    "version": 4
}
