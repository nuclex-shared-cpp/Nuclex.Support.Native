{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Generate (CMake)",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "type": "shell",
      "command": "cmake",
      "args": [
        "-B", "obj/cmake-Debug",
        "-DCMAKE_BUILD_TYPE=Debug"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "Build (CMake)",
      "dependsOn": [ "Generate (CMake)" ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build", "obj/cmake-Debug",
        "--config", "Debug",
        "--parallel", "16"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "Install (CMake)",
      "dependsOn": [ "Build (CMake)" ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "type": "shell",
      "command": "cmake",
      "args": [
        "--install", "obj/cmake-Debug",
        "--config", "Debug"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "Run Tests (CMake)",
      "dependsOn": [ "Install (CMake)" ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "type": "shell",
      "command": "bin/linux-gcc11.3-amd64-debug/NuclexSupportNativeTests",
      "args": [ ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "Run Benchmarks (CMake)",
      "dependsOn": [ "Install (CMake)" ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "type": "shell",
      "command": "bin/linux-gcc11.3-amd64-debug/NuclexSupportNativeBenchmark",
      "args": [ ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "Clean",
      "group": "build",
      "type": "shell",
      "command": "scons",
      "args": [
        "-c",
        "DEBUG=1"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ]
}
